<!-- Right side column. Contains the navbar and content of the page -->
<aside class="right-side" >
    <!-- Content Header (Page header) -->
    <section class="content-header" >
        <h1>
            <%= __('Module') %>
            <small><%= __('Control panel') %></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> <%= __('Module') %></a></li>
            <li class="active"><%= __('Control panel') %></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content"  data-ng-controller="ModuleCtrl as vm">
          
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#tab_1" data-toggle="tab" aria-expanded="true"><%= __('modules-installed') %></a></li>
              <li class=""><a href="#tab_2" data-toggle="tab" aria-expanded="false"><%= __('modules-store') %></a></li>
              <li class="pull-right"><a href="#" class="text-muted"><i class="fa fa-gear"></i></a></li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane active" id="tab_1">
                    <!-- BEGINNING OF TAB 1 -->
                        <div class="box-body no-padding">
              <table class="table">
                <tbody><tr>
                  <th style="width: 10px"><%= __('ID') %></th>
                  <th><%= __('Name') %></th>
                  <th><%= __('Version') %></th>
                  <th><%= __('Status') %></th>
                  <th></th>
                  <th><%= __('Infos') %></th>
                </tr>
                
                 <tr ng-repeat="module in vm.modules" class="ng-cloak">
                  <td>{{module.id}}</td>
                  <td>{{module.name}}</td>
                  <td>{{module.version}}</td>
                  <td>{{module.status}}</td>
                  <td>
                   <!-- <div class="progress progress-xs" >
                      <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                    </div>-->
                  </td>
                  <td><button class="btn btn-info btn-sm" ng-click="vm.displayModule(module);"><%= __('Infos') %></button></td>
                </tr>
                
              </tbody></table>
            </div>
                    
                    
                    <!-- END OF TAB 1 -->
              </div>
              <!-- /.tab-pane -->
              <div class="tab-pane" id="tab_2" data-ng-controller="StoreCtrl as vm">
                <div class="row modules" >

            
                    <div class="col-lg-3 col-sm-4 col-xs-6 module" ng-repeat="module in vm.modules">
                        <a href="/fr/modules/cron" <h5="">{{module.name}}
                        <div class="module-img">
                            <img class="img-responsive img-rounded" src="{{module.img}}">
                            <div class="description">
                                <p class="text-justify">
                                    {{module.description}}
                                </p>
                            </div>
                        </div>
                        </a>

                        <div class="row">
                            <div class="col-xs-8 col-sm-6">
                                <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                 </div>
                            <div class="col-xs-4 col-sm-6 text-right">
                                <a href="/fr/modules/cron">{{module.nbReviews}} <%= __('modules-store-review') %> </a>
                            </div>
                        </div>

                    </div>
                    <div class="clearfix"></div>
                </div>
              </div>
              <!-- /.tab-pane -->
              
              <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
          </div>

    </section><!-- /.content -->
</aside><!-- /.right-side -->

<script>
    document.getElementById("moduleLi").className = "active";
</script>




        